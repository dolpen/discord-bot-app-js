{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-bitwise": true,
    "ordered-imports": false,
    "align": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ]
  }
}